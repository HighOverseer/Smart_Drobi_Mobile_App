<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AplikasiPKM" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AplikasiPKM" parent="Base.Theme.AplikasiPKM">
        <item name="android:windowBackground">@color/white_100</item>
        <item name="android:colorPrimary">@color/white</item>
    </style>

    <style name="Theme.AplikasiPKM.Splash">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="MyTextView.SansSerif.Medium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/sans_semi_bold</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Black.H1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Black.H2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Black.H3">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Black.H4">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Black.H5">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Black.H6">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Black.H7">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Black.H8">
        <item name="android:textSize">9sp</item>
    </style>


    <style name="MyTextView.SansSerif.Medium.Green">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Green.H5">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppSearchBar" parent="Widget.AppCompat.SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Grey">
        <item name="android:textColor">@color/grey_1000</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Grey.H5">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Grey.H6">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Grey.H7">
        <item name="android:textSize">9.5sp</item>
    </style>

    <style name="MyTextView.SansSerif.Medium.Grey.H8">
        <item name="android:textSize">8.5sp</item>
    </style>

    <style name="SearchBarEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/search_view_bg</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:hint">@string/search_view_hint</item>
        <item name="android:fontFamily">@font/sans_semi_bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyFilterButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_filter_search</item>
        <item name="android:background">@drawable/ic_filter_search_bg</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">28dp</item>
    </style>


    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:padding">3.5dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@null</item>
        <item name="android:dropDownVerticalOffset">29dp</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_bg</item>
    </style>

    <style name="SpinnerStyle.V2">
        <item name="android:dropDownVerticalOffset">25.5dp</item>
    </style>

    <style name="SpinnerDropDownImageViewStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:src">@drawable/ic_drop_with_bg</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>



    <style name="SpinnerContainerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginStart">-1dp</item>
        <item name="android:layout_marginEnd">-1dp</item>
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="android:background">@drawable/spinner_item_bg</item>
    </style>

    <style name="SpinnerContainerStyle.V2">
        <item name="android:background">@drawable/spinner_item_bg_v2</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
    </style>
    
    <style name="SpinnerDropDownItemStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">

    </style>

    <style name="EditTextFormStyle" parent="MyTextView.SansSerif.Medium.Black.H6">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/field_form_bg</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="EditTextFormStyle.rad10">
        <item name="android:background">@drawable/field_form_bg_rad10</item>
    </style>

    <style name="EditTextFormStyle.Grey">
        <item name="android:background">@drawable/field_form_grey_bg</item>
    </style>

    <style name="EditTextFormStyle.Date">
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="BtnSaveStyle">
        <item name="android:layout_width">74dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/btn_save_bg</item>
        <item name="android:text">@string/simpan</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/sans_medium</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BtnSaveStyle.Small">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="BtnCancelStyle">
        <item name="android:layout_width">74dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/btn_cancel_bg</item>
        <item name="android:text">@string/cancel</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/sans_medium</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BtnCancelStyle.Small">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BtnBackStyle">
        <item name="android:layout_width">74dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/btn_back_bg</item>
        <item name="android:text">@string/back</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:fontFamily">@font/sans_medium</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BtnStartCheckStyle">
        <item name="android:includeFontPadding">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:text">@string/mulai_pemeriksaan</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.055</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:fontFamily">@font/sans_medium</item>
        <item name="android:background">@drawable/btn_start_check_bg</item>
    </style>

    <style name="BtnChooseStyle">
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_form_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BtnChooseStyle.Small">
        <item name="android:layout_height">14dp</item>
        <item name="android:textSize">9sp</item>
    </style>
    
    <style name="BtnBooleanStyle">
        <item name="android:layout_width">44.76dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:fontFamily">@font/sans_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BtnBooleanStyle.Yes">
        <item name="android:background">@drawable/btn_yes_bg</item>
        <item name="android:text">@string/yes</item>
    </style>

    <style name="BtnBooleanStyle.No">
        <item name="android:background">@drawable/btn_no_bg</item>
        <item name="android:text">@string/no</item>
    </style>

</resources>