<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.home.toplevelview.HistoryFragment">

    <!--android:paddingHorizontal="30dp"-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="30dp"
        android:paddingBottom="206dp"
        android:clipToPadding="false"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_empty_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sans_semi_bold"
        android:text="@string/wah_maaf_datanya_belum_ada"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical|center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!--<androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginStart="-8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_pupr"
        tools:viewBindingIgnore="true" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_filter"
        style="@style/MyFilterButton"
        android:paddingHorizontal="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/searchView"
        style="@style/SearchBarEditText"
        android:layout_marginStart="8dp"
        android:paddingHorizontal="10sp"
        app:layout_constraintBottom_toBottomOf="@id/ib_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ib_filter"
        app:layout_constraintTop_toTopOf="@id/ib_filter"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_history_info"
        style="@style/MyTextView.SansSerif.Medium.Black.H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/riwayat_pemeriksaan"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/ib_filter"
        app:layout_constraintTop_toBottomOf="@id/ib_filter"
        tools:viewBindingIgnore="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_year_info"
        style="@style/MyTextView.SansSerif.Medium.Grey.H5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tahun"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_history_info"
        app:layout_constraintTop_toBottomOf="@id/tv_history_info"
        tools:viewBindingIgnore="true"/>

    <View
        android:id="@+id/sp_container_year"
        style="@style/SpinnerContainerStyle"
        app:layout_constraintTop_toTopOf="@id/sp_year"
        app:layout_constraintBottom_toBottomOf="@id/sp_year"
        app:layout_constraintStart_toStartOf="@id/sp_year"
        app:layout_constraintEnd_toEndOf="@id/sp_year"
        tools:viewBindingIgnore="true"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_year"
        style="@style/SpinnerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_year_info" />

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/SpinnerDropDownImageViewStyle"
        app:layout_constraintTop_toTopOf="@id/sp_container_year"
        app:layout_constraintBottom_toBottomOf="@id/sp_container_year"
        app:layout_constraintEnd_toEndOf="@id/sp_container_year"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_month_info"
        style="@style/MyTextView.SansSerif.Medium.Grey.H5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bulan"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/sp_year"
        app:layout_constraintTop_toBottomOf="@id/sp_year"
        tools:viewBindingIgnore="true"/>

    <View
        android:id="@+id/sp_container_month"
        style="@style/SpinnerContainerStyle"
        app:layout_constraintTop_toTopOf="@id/sp_month"
        app:layout_constraintBottom_toBottomOf="@id/sp_month"
        app:layout_constraintStart_toStartOf="@id/sp_month"
        app:layout_constraintEnd_toEndOf="@id/sp_month"
        tools:viewBindingIgnore="true"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_month"
        style="@style/SpinnerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_month_info"/>

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/SpinnerDropDownImageViewStyle"
        app:layout_constraintTop_toTopOf="@id/sp_container_month"
        app:layout_constraintBottom_toBottomOf="@id/sp_container_month"
        app:layout_constraintEnd_toEndOf="@id/sp_container_month"/>
-->


